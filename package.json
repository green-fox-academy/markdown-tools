{
  "name": "markdown-tools",
  "version": "0.1.0",
  "description": "A simple tool-set for linting errors in markdown files",
  "main": "",
  "scripts": {
    "postinstall": "./scripts/postinstall.sh",
    "stylecheck": "remark lint/ -f",
    "spellcheck": "mdspell 'lint/**/*.md' '!**/node_modules/**/*.md' -d all -r",
    "prespellcheck": "./scripts/prespellcheck.sh",
    "lint": "npm run spellcheck && npm run stylecheck"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/green-fox-academy/markdown-tools.git"
  },
  "author": "Tamas Kokeny <tamas.kokeny@greenfoxacademy.com>",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/green-fox-academy/markdown-tools/issues"
  },
  "homepage": "https://github.com/green-fox-academy/markdown-tools#readme",
  "dependencies": {
    "markdown-spellcheck": "^1.3.1",
    "remark-cli": "^5.0.0",
    "remark-lint": "^6.0.2",
    "remark-lint-checkbox-character-style": "^1.0.2",
    "remark-lint-checkbox-content-indent": "^1.0.2",
    "remark-lint-final-newline": "^1.0.2",
    "remark-lint-list-item-bullet-indent": "^1.0.2",
    "remark-lint-list-item-content-indent": "^1.0.2",
    "remark-lint-list-item-indent": "^1.0.2",
    "remark-lint-no-heading-content-indent": "^1.0.2",
    "remark-lint-no-heading-indent": "^1.0.2",
    "remark-lint-no-missing-blank-lines": "^1.0.2",
    "remark-lint-no-paragraph-content-indent": "^1.0.4",
    "remark-lint-no-reference-like-url": "^1.0.2",
    "remark-lint-no-tabs": "^1.0.2",
    "remark-preset-lint-markdown-style-guide": "^2.1.2"
  }
}
